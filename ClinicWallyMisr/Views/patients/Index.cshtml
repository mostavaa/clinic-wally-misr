@model IEnumerable<ClinicWallyMisr.patient>

@{
    ViewBag.Title = "Index";
}


<div style="margin-top:20px;clear:both;"></div>


<div class="row">
    <div class="col-md-offset-2 col-md-6">

        <form>
            <div class="row">

                <input type="text" id="name" name="name" placeholder="Name" class="myinput" />
                <p style="float:right" class="btn btn-primary">
                    @Html.ActionLink("Create New", "Create")
                </p>

            </div>
            <div class="row">

                <input type="submit" class="myinput glyphicon glyphicon-search" value="Search" />
            </div>
        </form>
    </div>
</div>


<div style="margin-top:20px;clear:both;"></div>

<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.diagnosis)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.masterStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dateofDiagnosis)
                </th>
             <th>
                 Visits
             </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr style="cursor:pointer" class="clickable" data-href="@Url.Action("Edit", "patients", new { id = item.id })">
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.diagnosis)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.masterStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateofDiagnosis)
                    </td>
                    <td>
                        @Html.ActionLink("Visits", "Index", "visits", new { id = item.id }, new { @class="btn"})
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
</div>
</div>