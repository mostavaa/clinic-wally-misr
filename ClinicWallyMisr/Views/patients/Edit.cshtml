                <script>
        $(document).ready(function () {
            $("#gender").change(function () {
                if ($(this).val() == "Female") {
                    $("#pregnancyatDiagnosis").removeAttr("readonly");
                    $("#contraception").removeAttr("readonly");
                    $("#LMPDate").removeAttr("readonly");
                    $("#LMP").removeAttr("readonly");
                    $("#menstrual").removeAttr("readonly");
                    $("#pregnancyatDiagnosis").removeAttr("disabled");
                    $("#contraception").removeAttr("disabled");
                    $("#LMPDate").removeAttr("disabled");
                    $("#LMP").removeAttr("disabled");
                    $("#menstrual").removeAttr("disabled");
                } else {
                    $("#pregnancyatDiagnosis").attr("readonly", "readonly");
                    $("#contraception").attr("readonly", "readonly");
                    $("#LMPDate").attr("readonly", "readonly");
                    $("#LMP").attr("readonly", "readonly");
                    $("#menstrual").attr("readonly", "readonly");
                    $("#pregnancyatDiagnosis").attr("disabled", "disabled");
                    $("#contraception").attr("disabled", "disabled");
                    $("#LMPDate").attr("disabled", "disabled");
                    $("#LMP").attr("disabled", "disabled");
                    $("#menstrual").attr("disabled", "disabled");
                }
            });
            $(".removeOperation").click(function () {
                id = $(this).attr("data-id");
                row = $(this).parent();
                $.post("@Url.Action("RemoveOperation")", "id=" + id, function (res) {
                    if (res == "1") {
                        $(row).remove();
                    }
                })
            });
            $("#addOperation").click(function () {
                newOperationDate = $("#newOperationDate").val();
                newOperationName = $("#newOperationName").val();
                body = $(this).parent().parent();
                $.post("@Url.Action("AddOperation","patients")", "name=" + newOperationName + "&opDate=" + newOperationDate + "&id=" + "@Model.id", function (res) {
                    if (res == "1") {
                        $(body).append("<tr><td>" + newOperationName + "</td><td>" + newOperationDate + "</td><td class='btn btn-danger'>Remove</td></tr>");
                    }
                })
            });
        });
                </script>
