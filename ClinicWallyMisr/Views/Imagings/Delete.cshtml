@model ClinicWallyMisr.Imaging

@{
    ViewBag.Title = "Delete";
}
@helper renderPatient(patient obj)
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-6">Patient Name : </label>
                <div class="col-md-10 ">
                    <input type="text" readonly="readonly" value="@obj.name " />

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-6">diagnosis</label>
                <div class="col-md-10 ">

                    <input type="text" readonly="readonly" value="@obj.diagnosis " />

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-6">diagnosis Code</label>
                <div class="col-md-10 ">

                    <input type="text" readonly="readonly" value="@obj.diagnosisCode " />

                </div>
            </div>

        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-6">notes</label>
                <div class="col-md-10 ">

                    <input type="text" readonly="readonly" value="@obj.notes " />

                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-6">master Status</label>
                <div class="col-md-10 ">
                    <input type="text" readonly="readonly" value="@obj.masterStatus " />
                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-6">date of Diagnosis</label>
                <div class="col-md-10 ">

                    <input type="text" readonly="readonly" value="@obj.dateofDiagnosis " />

                </div>
            </div>

        </div>
    </div>




    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-6">first Status</label>
                <div class="col-md-10 ">

                    <input type="text" readonly="readonly" value="@obj.firstStatus " />

                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-6">date of Relapse</label>
                <div class="col-md-10 ">

                    <input type="text" readonly="readonly" value="@obj.dateofRelapse " />

                </div>
            </div>

        </div>


    </div>
}
<div style="margin-top:20px;clear:both;"></div>
<div class="row">
    <div class="col-md-offset-2 col-md-6">
        <div class="row">
            @Html.ActionLink("Patients", "Index", "patients", null, new { @class = "btn" })
            @Html.ActionLink("Visits", "Index", "visits", new { id = Model.visit.patient.id }, new { @class = "btn" })
            @Html.ActionLink("Investigations", "investigations", "visits", new { id = Model.visit.id }, new { @class = "btn" })
            @Html.ActionLink("Imagings", "Index", "Imagings", new { id = Model.VisitId }, new { @class = "btn" })

        </div>
        @renderPatient(Model.visit.patient)
    </div>
</div>
<br />
<div style="margin-top:20px;clear:both;"></div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ImageDate)
                </dt>

                <dd class="myinput">
                    @Html.DisplayFor(model => model.ImageDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ImageCenter)
                </dt>

                <dd class="myinput">
                    @Html.DisplayFor(model => model.ImageCenter)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TypeofImage)
                </dt>

                <dd class="myinput">
                    @Html.DisplayFor(model => model.TypeofImage)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Site)
                </dt>

                <dd class="myinput">
                    @Html.DisplayFor(model => model.Site)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Comments)
                </dt>

                <dd class="myinput">
                    @Html.DisplayFor(model => model.Comments)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ImageName)
                </dt>

                <dd class="myinput">
                    @Html.DisplayFor(model => model.ImageName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.visit.visitStatus)
                </dt>

                <dd class="myinput">
                    @Html.DisplayFor(model => model.visit.visitStatus)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index", new { id = Model.VisitId }, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>
<br />