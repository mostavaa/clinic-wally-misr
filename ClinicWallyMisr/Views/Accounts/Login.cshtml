@{
    ViewBag.Title = "Login";
}

<div style="margin-top:20px;clear:both;"></div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="name" class="control-label col-md-2">User Name</label>
                        <div class="col-md-10">
                            <input type="text" name="name" id="name" class="myinput" />
                            @Html.ValidationMessage("name", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Password" class="control-label col-md-2">Password</label>
                        <div class="col-md-10">
                            <input type="password" name="Password" id="Password" class="myinput" />
                            @Html.ValidationMessage("Password", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</div>