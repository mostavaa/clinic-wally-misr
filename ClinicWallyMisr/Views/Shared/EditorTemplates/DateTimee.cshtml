@model DateTime?
@{
    if (Model.HasValue)
    {
        @Html.TextBox("", Model.Value.ToString("dd-MMM-yyyy"), new { @class = "myinput", @readonly = "readonly", style = "cursor:pointer" })
    }
    else
    {
        @Html.TextBox("", "", new { @class = "myinput", @readonly = "readonly", style = "cursor:pointer" })
    }
}