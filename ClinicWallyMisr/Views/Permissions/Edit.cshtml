@model ClinicWallyMisr.Permission

@{
    ViewBag.Title = "Edit";
}
<div style="margin-top:20px;clear:both;"></div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            <div class="col-md-4"><h1>@Model.Group.name</h1></div>
            <div class="col-md-4"><h1>@Model.Table.tableName</h1></div>
        </div>
        <br />
        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
              
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)


                    <input type="hidden" id="groupId" name="groupId" value="@Model.groupId"/>
                    <input type="hidden" id="tableId" name="tableId" value="@Model.tableId"/>


                    <div class="form-group">
                        @Html.LabelFor(model => model.canAdd, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.canAdd)
                                @Html.ValidationMessageFor(model => model.canAdd, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.canEdit, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.canEdit)
                                @Html.ValidationMessageFor(model => model.canEdit, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.canDelete, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.canDelete)
                                @Html.ValidationMessageFor(model => model.canDelete, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.canRead, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.canRead)
                                @Html.ValidationMessageFor(model => model.canRead, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index", new { @id=Model.groupId}, new { @class = "btn btn-default" })
            </div>

            </div>
        </div>
    </div>
         